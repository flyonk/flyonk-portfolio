.addLine {
  min-width: 100px;
  display: flex;
  align-items: center;
  position: relative;

  &.blocked {
    filter: grayscale(70%);
    pointer-events: none;
    &:after {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }
  }
}

.second-input {
  margin-right: 15px;
}

.the-btn {
  margin-left: 20px;
}
