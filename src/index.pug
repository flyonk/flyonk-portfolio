extends ./main.layout.pug

block content
  .welcome-section#welcome
    section.hero
      .burger-popup
        p.x-close-btn X
        ul.burger-menu
          li.burger-item
            a(href="#welcome") Главная
          li.burger-item 
            a(href="#about") Обо мне
          li.burger-item
            a(href="#values") Навыки
          li.burger-item
            a(href="#works") Работа
          li.burger-item
            a(href="#reviews") Отзывы
        ul.burger-icons
        - var socials = ["insta", "vk", "github", "envelope"]
            li.burger-social-item
              each social in socials
                a(href="#" target="_blank").socials__link
                  +icon(social, "socials__icon")
      .container.hero__container
        header.header
          a.logo(href="#") ЩП
          nav.menu
            - var menuItems = [["Обо мне", "#about"], ["Навыки", "#values"], ["Работы","#works"], ["Отзывы", "#reviews"]]
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href="#").menu__link #{item[0]}
          ul.socials
            - var socials = ["insta", "vk", "github", "envelope"]
            li.socials__item
              each item in socials
                a(href="#" target="_blank").socials__link
                  +icon(item, "socials__icon")
            #burger-place
        .userinfo
          .userinfo__title Личный сайт веб разработчика
          .userinfo__name Щепетин Пётр
        
        .hero__bottom-buttons
          button.scroll-down-btn Скролл
            a(href="#").scroll__link.scroll-down-btn--link
              +icon("scroll", "scroll__image")
    section.about#about
      .container.about__container
        .about__user
          .user
            .user__avatar
              .user__avatar-style
                +image("content/usergoba.png", "user__avatar-pic")
            - 
              var userInfo = [
                ["Проживаю", "Батуми, Грузия"],
                ["Возраст", "29 лет"],
                ["Родился", "12 июня 1991г"]
              ];
            table.user__data
              each item in userInfo
                tr.user__data-row
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
        .about__content
          .about__desc Привет, меня зовут
          .about__title Щепетин Пётр
          .about__text-info
            p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
          .about__wrap
            p *
            .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
  .middle-section.middle-section__triangles-top
    .triangles.triangles--pointed-down
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--top
        polygon(points="0,0 0,100 1000,100")
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--top
        polygon(points="0,100 1000,100 1000,0")
    section.values#values
      .container
        .values__title
          .values__title-text Чем я могу быть полезен Вам
          .values__content
            p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
        .values__main-content
          .values__image-wrap
            +image("content/backpack.png", "user__avatar-pic")
          .values__widget
            #skills-component
        .values__image-wrap-second
          +image("content/backpack.png", "user__avatar-pic")
    section.works#works
      .container
        .section-title Мои работы
        .works__content
          #preview-component 
    svg(viewBox="0 0 1000 100" preserveAspectRatio="none" fill="#fff").bottom-triangle
      polygon(points="0,0 500,100 1000,00")
    section.reviews#reviews
      .container
        #slider-component

    section.footer
      .container.footer-container
        ul.footer-list
          li.footer-item.footer-item--first
            .footer__copyright
              .footer__copyright-col
                .footer__copyright-year &copy; 2021
              .footer__copyright-userinfo
            .footer-item__about
              .about__name Щепетин <br> Пётр 
              .about__job Личный сайт<br> веб разработчика
          li.footer-item.footer-item--second
            .footer-second-left
              ul.footer-item__menu
                li.footer-item__menu-item
                  a.menu-item__link(href="#") Обо мне
                li.footer-item__menu-item
                  a.menu-item__link(href="#") Навыки
                li.footer-item__menu-item
                  a.menu-item__link(href="#") Работы
                li.footer-item__menu-item
                  a.menu-item__link(href="#") Отзывы
              .footer-item__desc Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
              ul.footer-item__socials
                - var socials = ["insta", "vk", "github", "envelope"]
                li.socials__item
                  each item in socials
                    a(href="#" target="_blank").socials__link.socials__link--footer
                      +icon(item, "socials__icon icon-gray")
            .footer-second-right
              .smart-qoute Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
              .quote-author Martin Golding

