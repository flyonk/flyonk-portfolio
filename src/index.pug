extends ./main.layout.pug

block content
  .welcome-section
    section.hero
      .container.hero__container
        header.header
          a.logo(href="#") ЩП
          nav.menu
            - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"]
            ul.menu__list
              each item in menuItems
                li.menu__item
                  a(href="#").menu__link #{item}
          ul.socials
            - var socials = ["insta", "vk", "github", "envelope"]
            li.socials__item
              each item in socials
                a(href="#" target="_blank").socials__link
                  +icon(item, "socials__icon")
        .userinfo
          .userinfo__title Личный сайт веб разработчика
          .userinfo__name Щепетин Пётр
        
        .hero__bottom-buttons
          button.scroll-down-btn Скролл
            a(href="#").scroll__link.scroll-down-btn--link
              +icon("scroll", "scroll__image")
    section.about
      .container.about__container
        .about__user
          .user
            .user__avatar
              .user__avatar-style
                +image("content/usergoba.png", "user__avatar-pic")
            - 
              var userInfo = [
                ["Проживаю", "Батуми, Грузия"],
                ["Возраст", "29 лет"],
                ["Родился", "12 июня 1991г"]
              ];
            table.user__data
              each item in userInfo
                tr.user__data-row
                  td.user__data-title #{item[0]}
                  td.user__data-content #{item[1]}
        .about__content
          .about__desc Привет, меня зовут
          .about__title Щепетин Пётр
          .about__text-info
            p Я занимаюсь разработкой современный сайтов и приложений
          .about__wrap
            p *
            .about__ps
            | Этот сайт я сделал чисто по кайфу для себя любимого
            | Этот сайт я сделал чисто по кайфу для себя любимого
            | Этот сайт я сделал чисто по кайфу для себя любимого
  .middle-section.middle-section__triangles-top
    .triangles.triangles--pointed-down
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--top
        polygon(points="0,0 0,100 1000,100")
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--top
        polygon(points="0,100 1000,100 1000,0")
    section.values
      .container
        .values__title
          .values__title-text Чем я могу быть полезен Вам
          .values__content
            p Этот сайт я сделал, что бы мама мной гордилась
        .values__main-content
          .values__image-wrap
            +image("content/backpack.png", "user__avatar-pic")
          .values__widget
            -
              var 
              skillsCategories = [
                ["Frontend", [["HTML", 20], ["(S/P)CSS", 40], ["JavaScript", 40], ["Vue", 60], ["Pug", 40]]],
                ["Backend", [["NodeJS", 80], ["Express", 80], ["Meteor", 80], ["WebSocket", 80], ["Handlebars", 80]]],
                ["Workflow", [["GIT", 110], ["Terminal", 110], ["Webpack", 110], ["Gulp", 110], ["WSL", 110], ["ООП", 110]]],
              ];
            ul.skills
              each category in skillsCategories
                li.skills__item
                .skills-row
                  .skills-row__title #{category[0]}
                  ul.skills-row__list
                    each skill in category[1]
                      li.skills-row__item
                        .skill
                          svg(viewBox="0 0 100 100").skill__circle-shape
                            circle(cx="50" cy="50" r="40").skill__circle.skill__circle--layer--under
                            circle(cx="50" cy="50" r="40" stroke="url(#gradient)" transform="rotate(180 50 50)").skill__circle.skill__circle--layer--above(style="stroke-dashoffset='#{skill[1]}'")
                            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                              stop(offset="0%" stop-color="#5500f2")
                              stop(offset="100%" stop-color="#5500f2")
                          .skill-title #{skill[0]}
    section.works
      .container
        .section-title Мои работы
        .works__content
          .works-preview
            .works-preview__pictures(data-slide="2")
              +image("content/slider-1.jpg", "works-preview__image")
              .works-preview__thumbs
                ul.thumbs
                  - for (var i = 4; i > 0; i--)
                    li.thubms__item
                      a(href="").thumbs__link
                        +image(`content/slider-${i}.jpg`, `slider-image-${i}`)
              .works-preview__btns
                .square-btns
                  button(type="button").square-btns__item
                    p.square-btns__item-top &gt;
                  button(type="button").square-btns__item
                    p.square-btns__item-down &gt;
            .works-preview__info
              - var tags = ["HTML", "CSS", "JavaScript"]
              ul.tags
                each item in tags
                  li.tags__item
                    .tag #{item}
              .works-preview__title Сайт школоло
              .works-preview__desc 
                p Этот парень просто бомба, <br> этот парень просто класс
              a(href="#").iconed-link Посмотреть сайт
    .triangles.triangles--bottom
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position--left
        polygon(points="0,0 0,100 1000,100")
      svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position--right
        polygon(points="0,100 1000,100 1000,0")
    section.reviews
      .container
        .slider
          .slider-header
            .section-title Что обо мне говорят
            .slider-buttons
              button(type="button").round-btn.round-btn--pointer--right &lt;
              button(type="button").round-btn.round-btn--pointer--left &gt;
          ul.slider__content
            li.slider__item
              .quote
                .quote__text
                  p Этот парень делает вещи
                .quote__user
                  .user-display
                    .user-display__avatar
                      .user-display__avatar-style
                        +image("content/user.jpg", "user-display__pic")
                    .user-display__data
                      .user-display__name Дмитрий Ковальчук
                      .user-display__occ Основатель Loftschool
            li.slider__item
              .quote
                .quote__text
                  p Этот парень делает вещи
                .quote__user
                  .user-display
                    .user-display__avatar
                      .user-display__avatar-style
                        +image("content/user.jpg", "user-display__pic")
                    .user-display__data
                      .user-display__name Дмитрий Ковальчук
                      .user-display__occ Основатель Loftschool

    section.footer
      .container.footer-container
        ul.footer-list
          li.footer-item.footer-item--first
            .footer__copyright
              .footer__copyright-col
                .footer__copyright-year &copy; 2021
              .footer__copyright-userinfo
            .footer-item__about
              .about__name Щепетин <br> Пётр 
              .about__job Личный сайт<br> веб разработчика
          li.footer-item.footer-item--second
            ul.footer-item__menu
              li.footer-item__menu-item
                a.menu-item__link(href="#") Обо мне
              li.footer-item__menu-item
                a.menu-item__link(href="#") Навыки
              li.footer-item__menu-item
                a.menu-item__link(href="#") Работы
              li.footer-item__menu-item
                a.menu-item__link(href="#") Отзывы
            .footer-item__desc Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
            ul.footer-item__socials
              - var socials = ["insta", "vk", "github", "envelope"]
              li.socials__item
                each item in socials
                  a(href="#" target="_blank").socials__link.socials__link--footer
                    +icon(item, "socials__icon icon-gray")
          li.footer-item.footer-item--third
            .smart-qoute Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
            .quote-author Martin Golding

