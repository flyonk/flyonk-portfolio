.menu__list {
  display: flex;
  justify-content: center;
}

.menu__item {
  margin-right: 60px;
}

.socials__item {
  margin-right: 30px;

  &:last-child {
    margin-right: 0;
  }
}

.menu__link:hover {
  color: #5500f2;
}

.menu-item__link {
  font-weight: normal;
  font-size: 16px;
  line-height: 22px;
  display: flex;
  align-items: center;

  &:hover {
    color: #ff9a00;
  }
}
