.socials {
  display: flex;
}

.socials__icon {
  width: 25px;
  height: 25px;
  fill: $text-color;

  &:hover {
    fill: #5500f2;
  }
}

.socials__icon.icon-gray:hover {
  fill: #ff9a00;
}

.socials__link {
  margin-right: 21px;

  &:last-child {
    margin-right: 0;
  }

  &--footer {
    border: 1px solid rgba(255, 255, 255, 0.3);
    width: 50px;
    height: 50px;
    border-radius: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
}
